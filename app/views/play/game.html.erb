<div class="container text-center">
  <div class="card">
    <h2>Available letters:</h2>
      <ul class="list-inline">
        <% @grid.each do |letter| %>
          <li class="letter"><%= letter %></li>
        <% end %>
      </ul>

    <form action="/score" class="form-inline">
      <input type="hidden" name="grid" value="<%= @grid.join %>" >
      <input type="text" class="form-control" name="guess" id="guess">
      <input type="hidden" name="start_time" value="<%= Time.now %>" >
      <input type="submit" value="Try !" class="btn btn-primary">
    </form>
  </div>
</div>
